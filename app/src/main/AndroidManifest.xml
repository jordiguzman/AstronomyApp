<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appkite.jordiguzman.com.astronomyapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_nasa"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_nasa"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mainUi.MainActivityApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".apod.ui.ApodActivity"
            android:parentActivityName=".mainUi.MainActivityApp" />
        <activity android:name=".planets.MainActivityPlanets"/>
    </application>

</manifest>