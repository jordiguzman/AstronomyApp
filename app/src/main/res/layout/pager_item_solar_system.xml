<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/model_margin_8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <appkite.jordiguzman.com.astronomyapp.apod.ui.utils.DynamicHeightNetworkImageView
            android:id="@+id/photo_solar_system_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_title_pager_solar_system_item"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_explanation_pager_solar_system_item"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/model_margin_8"
                    android:layout_marginEnd="@dimen/model_margin_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>



</android.support.v7.widget.CardView>