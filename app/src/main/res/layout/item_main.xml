<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/model_margin_cardview"
    android:layout_marginRight="@dimen/model_margin_cardview"
    android:layout_marginTop="@dimen/model_margin_cardview"
    android:layout_marginBottom="@dimen/model_margin_cardview"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLightTrans"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_main"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/main_title"
            style="@style/TextViewModelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/model_margin_16"
            android:paddingTop="@dimen/model_margin_16"
            android:paddingRight="@dimen/model_margin_16"
            android:paddingBottom="@dimen/padding_textview_item_main"
            android:textColor="@color/primary_text"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/main_subtitle"
            style="@style/TextViewModelSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/model_padding_16"
            android:paddingRight="@dimen/model_padding_16"
            android:paddingBottom="@dimen/model_padding_16"
            android:textStyle="italic"
            android:textColor="@color/secondary_text"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
