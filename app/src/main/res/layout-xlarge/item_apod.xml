<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/model_margin_cardview"
    android:layout_marginRight="@dimen/model_margin_cardview"
    android:layout_marginTop="@dimen/model_margin_cardview"
    android:layout_marginBottom="@dimen/model_margin_cardview"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_apod"
            android:layout_width="@dimen/image_item_model"
            android:layout_height="@dimen/image_item_model"
            android:layout_margin="@dimen/model_margin_8"
            android:background="@drawable/round_image_view"
            android:contentDescription="@string/app_name"
            android:transitionName="@string/trans_photo_apod"
            android:scaleType="centerCrop"
            tools:targetApi="lollipop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/model_margin_8"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="@font/alfa_slab_one"
            style="@style/TextViewModelTitle" />
        <TextView
            android:id="@+id/tv_date"
            android:textStyle="italic"
            style="@style/TextViewModelSubTitle"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

