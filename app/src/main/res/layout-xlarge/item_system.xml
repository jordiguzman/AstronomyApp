<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/model_margin_cardview"
    android:layout_marginRight="@dimen/model_margin_cardview"
    android:layout_marginTop="@dimen/model_margin_cardview"
    android:layout_marginBottom="@dimen/model_margin_cardview"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_system_item"
            android:layout_width="@dimen/image_item_model"
            android:layout_height="@dimen/image_item_model"
            android:layout_margin="@dimen/model_margin_8"
            android:contentDescription="@string/app_name"
            android:background="@drawable/round_image_view"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/model_margin_8"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title_system"
            style="@style/TextViewModelTitle"
            android:fontFamily="@font/alfa_slab_one"/>
            <TextView
                android:id="@+id/tv_subtitle_system"
                style="@style/TextViewModelSubTitle"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

