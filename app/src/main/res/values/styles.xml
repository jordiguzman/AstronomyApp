<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayoutCustom</item>
        <item name="cardViewStyle">@style/Base.CardView</item>


    </style>

    <style name="Widget.Design.CoordinatorLayoutCustom" parent="@style/Widget.Support.CoordinatorLayout">
        <item name="statusBarBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="TextViewModelTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_margin">@dimen/model_margin_8</item>7
        <item name="android:fontFamily">@font/alfa_slab_one</item>
    </style>

    <style name="TextViewModelSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_margin">@dimen/model_margin_8</item>7

    </style>
</resources>
